<%% content_for :page_title do %>
  <%%= Spree.t(:editing_<%= singular_name %>) %>
<%% end %>

<%% content_for :page_actions do %>
  <li>
    <%%= button_link_to Spree.t(:back_to_<%= plural_name %>_list), collection_url, icon: 'arrow-left' %>
  </li>
<%% end %>

<div data-hook="admin_<%= singular_name %>_edit_form_header">
  <%%= render 'spree/shared/error_messages', target: @<%= singular_name %> %>
</div>

<div data-hook="admin_<%= singular_name %>_edit_form">
  <%%= form_for [:admin, @<%= singular_name %>] do |f| %>
    <%%= render 'form', f: f %>

    <div data-hook="admin_<%= singular_name %>_edit_form_buttons">
      <%%= render 'spree/admin/shared/edit_resource_links' %>
    </div>
  <%% end %>
</div>
